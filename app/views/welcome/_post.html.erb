<div class="row">
	<% @posts.reverse.each do |post| %>
		 <div class="col-sm-6 col-md-6 col-lg-3 pic_height">
		 	<%= div_for post do %>
		 		<div class="tumbnail">
		 			<h3><%=post.title%></h3>
		 			<%= link_to image_tag(post.main_image), post_path(post.id)%>
		 		</div>
		 	<%end%>
		 </div>
	<% end %>
</div>