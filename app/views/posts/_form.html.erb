<div class="recipe-form">
<%= form_for @post, html: { id: "recipe-form" } do |f| %>
	<div class= "form-group">

		<%=f.label :title, "What's Your Recipe's Name?" %>
		<%=f.text_field :title, :maxlength => 40, class: "form-control", autofocus: true, placeholder: "How to...", required: true %>
	</div>
	
	<div class="form-group">
		<%=f.label :body, "What are the steps?" %>
		<%=f.text_area :body, :maxlength => 200, class: "text-area-control", placeholder: "Example: ingredients, tools, steps", required: true%>
	</div>

	<div class="form-group">
		<%=f.label :story, "Tell us the story" %>
		<%=f.text_area :story, :maxlength => 200, class: "text-area-control", placeholder: "What is the story behind your recipe?", required: true%>
	</div>

	<div class="form-group">
		<%=f.label :main_image, "Upload a photo" %>
		<%=f.file_field :main_image, class: "form-image", required: true %>
	</div>

	<p>Ready to Share? </p> 
	
	<%=f.submit "CONTRIBUTE RECEIPE", class: "submit-btn" %>

<%end%>
	</div>
</div>
